{
  // Имя и описание, версия. Все это будет видно в браузере в chrome://extensions/?id=<id расширения>
  "name": "Enecuum",
  "description": "Enecuum Wallet",
  "version": "0.0.1",
  "manifest_version": 2,

  // Скрипты, которые будут исполнятся в background
  "background": {
    "scripts": ["background.js", "enqweb3.min.js"]
  },
  //"content_security_policy": "script-src 'self' 'unsafe-eval';script-src-elem 'self' 'unsafe-eval'; object-src 'self'",
  // Указание на html для popup
  "browser_action": {
    "default_title": "Enecuum Wallet",
    "default_popup": "popup.html",
    "default_icon": "enq.png"
  },

  // Контент скрипты. Здесь у нас одно правило: параллельно всему, что открыто через http или https мы запускаем
  // contenscript context page с одним скриптом внутри. Запускать сразу по получении документа.
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  // Разрешен доступ к localStorage, вкладкам
  "permissions": [
    "storage",
   // "unlimitedStorage",
    //"clipboardWrite",
    "idle",
    "activeTab",
    //"webRequest",
    //"notifications",
    "tabs"
  ],
  // Здесь указываются ресурсы, к которым будет иметь доступ веб страница
  "web_accessible_resources": ["inpage.js", "inPage.js"]
}